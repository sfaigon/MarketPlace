<%- include("../partials/header") %>
<h2>Market List</h2>
<table class="table">
    <% if(markets.length) { %>
    <thead>
        <th>Owner</th>
        <th>Name</th>
        
        <th></th>
        
    </thead>
    <tbody>
        <% markets.forEach(function(m) { %>
            <tr>
                <td class="user"><img alt="avatar" class="icon" src="<%= m.userAvatar %>" referrerpolicy="no-referrer" > <%= m.userName %></td>
                <td><%= m.name %></td>
                
                <td><a href="/markets/<%= m._id %>"> Enter the Store</a></td>
            </tr>
       <% }) %>
        <% } else { %>
            <h2>No Markets Open</h2>
        <% } %> 
    </tbody>
</table>


<%- include("../partials/footer") %>