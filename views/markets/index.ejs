<%- include("../partials/header") %>
<h2>Market List</h2>
<table>
    <% if(markets.length) { %>
    <thead>
        <th>Name</th>
        <th>location</th>
        <th></th>
    </thead>
    <tbody>
        <% markets.forEach(function(m) { %>
            <tr>
                <td><%= m.name %></td>
                <td><%= m.location %></td>
                <td><a href="/markets/<%= m._id %>"> Enter the Store</a></td>
            </tr>
       <% }) %>
        <% } else { %>
            <h2>No Markets Open</h2>
        <% } %> 
    </tbody>
</table>


<%- include("../partials/footer") %>